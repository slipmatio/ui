{
  "name": "@slipmatio/ui",
  "version": "0.1.1",
  "type": "module",
  "description": "Common UI components for Slipmat.io projects",
  "author": {
    "name": "Ville Säävuori",
    "email": "ville@unessa.net"
  },
  "keywords": [
    "vue",
    "typescript",
    "slipmatio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/slipmatio/ui"
  },
  "bugs": {
    "url": "https://github.com/slipmatio/ui/issues"
  },
  "homepage": "https://slipmat.io",
  "license": "MIT",
  "main": "./dist/ui.cjs",
  "module": "./dist/ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ui.js",
      "require": "./dist/ui.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "sideEffects": false,
  "scripts": {
    "rebuild": "bash scripts/rebuild.sh",
    "dev": "DEBUG=0 vite dev",
    "build": "DEBUG=0 vue-tsc && vite build",
    "test": "DEBUG=0 vitest",
    "test:e2e": "DEBUG=0 playwright test --ui",
    "test:ci-e2e": "DEBUG=0 playwright test",
    "coverage": "DEBUG=0 vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "1.36.1",
    "@slipmatio/tailwind-config": "3.0.0",
    "@types/node": "20.4.2",
    "@vitejs/plugin-vue": "4.2.3",
    "@vitest/coverage-v8": "0.33.0",
    "@vue/test-utils": "2.4.0",
    "autoprefixer": "10.4.14",
    "happy-dom": "10.3.2",
    "postcss": "8.4.26",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6",
    "vite": "4.4.4",
    "vite-plugin-dts": "3.3.0",
    "vitest": "0.33.0",
    "vue": "3.3.4",
    "vue-tsc": "1.8.5"
  },
  "peerDependencies": {
    "@slipmatio/tailwind-config": "3",
    "vue": "3"
  },
  "engines": {
    "node": ">=18"
  }
}