{
  "name": "@slipmatio/ui",
  "version": "0.0.9",
  "description": "Common UI components for Slipmat.io projects",
  "author": {
    "name": "Ville Säävuori",
    "email": "ville@unessa.net"
  },
  "keywords": [
    "vue",
    "typescript",
    "slipmatio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/slipmatio/ui"
  },
  "bugs": {
    "url": "https://github.com/slipmatio/ui/issues"
  },
  "homepage": "https://slipmat.io",
  "license": "MIT",
  "main": "dist/ui.ssr.js",
  "browser": "dist/ui.esm.js",
  "module": "dist/ui.esm.js",
  "unpkg": "dist/ui.min.js",
  "types": "ui.d.ts",
  "files": [
    "dist/*",
    "ui.d.ts",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "rebuild": "bash scripts/rebuild.sh",
    "dev": "vue-cli-service serve dev/serve.ts",
    "serve": "vue-cli-service serve dev/serve.ts",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },
  "dependencies": {
    "autoprefixer": "10",
    "postcss": "8",
    "tailwindcss": "3"
  },
  "devDependencies": {
    "@babel/core": "~7.12",
    "@babel/preset-env": "~7.12",
    "@babel/preset-typescript": "~7.12",
    "@rollup/plugin-alias": "~3.1",
    "@rollup/plugin-babel": "~5.2",
    "@rollup/plugin-commonjs": "~17.1",
    "@rollup/plugin-node-resolve": "~11.1",
    "@rollup/plugin-replace": "~2.3",
    "@slipmatio/tailwind-config": "3",
    "@typescript-eslint/eslint-plugin": "~4.14",
    "@typescript-eslint/parser": "~4.14",
    "cross-env": "~7.0",
    "eslint": "~7.19",
    "minimist": "~1.2",
    "rollup": "~2.38",
    "rollup-plugin-postcss": "~3.1",
    "rollup-plugin-terser": "~7.0",
    "rollup-plugin-vue": "~6.0",
    "typescript": "~4.1",
    "vue": "^3.2"
  },
  "peerDependencies": {
    "@slipmatio/tailwind-config": "3",
    "vue": "3"
  },
  "engines": {
    "node": ">=14"
  }
}