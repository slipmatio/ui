{
  "name": "@slipmatio/ui",
  "version": "0.1.2",
  "type": "module",
  "description": "Common UI components for Slipmat.io projects",
  "author": {
    "name": "Ville Säävuori",
    "email": "ville@unessa.net"
  },
  "keywords": [
    "vue",
    "typescript",
    "slipmatio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/slipmatio/ui"
  },
  "bugs": {
    "url": "https://github.com/slipmatio/ui/issues"
  },
  "homepage": "https://slipmat.io",
  "license": "MIT",
  "main": "./dist/ui.cjs",
  "module": "./dist/ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ui.js",
      "require": "./dist/ui.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "sideEffects": false,
  "scripts": {
    "rebuild": "bash scripts/rebuild.sh",
    "dev": "DEBUG=0 vite dev",
    "build": "DEBUG=0 vue-tsc && vite build",
    "test": "DEBUG=0 vitest",
    "test:e2e": "DEBUG=0 playwright test --ui",
    "test:ci-e2e": "DEBUG=0 playwright test",
    "coverage": "DEBUG=0 vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "1.43.1",
    "@slipmatio/tailwind-config": "3.0.0",
    "@types/node": "20.12.7",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-v8": "1.5.0",
    "@vue/test-utils": "2.4.5",
    "autoprefixer": "10.4.19",
    "happy-dom": "14.7.1",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
    "vite": "5.2.8",
    "vite-plugin-dts": "3.8.2",
    "vitest": "1.5.0",
    "vue": "3.4.21",
    "vue-tsc": "2.0.13"
  },
  "peerDependencies": {
    "@slipmatio/tailwind-config": "3",
    "vue": "3"
  },
  "engines": {
    "node": ">=18"
  }
}