{
  "name": "@slipmatio/ui",
  "version": "0.0.9",
  "description": "Common UI components for Slipmat.io projects",
  "author": {
    "name": "Ville Säävuori",
    "email": "ville@unessa.net"
  },
  "keywords": [
    "vue",
    "typescript",
    "slipmatio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/slipmatio/ui"
  },
  "bugs": {
    "url": "https://github.com/slipmatio/ui/issues"
  },
  "homepage": "https://slipmat.io",
  "license": "MIT",
  "main": "dist/ui.ssr.js",
  "browser": "dist/ui.esm.js",
  "module": "dist/ui.esm.js",
  "unpkg": "dist/ui.min.js",
  "types": "ui.d.ts",
  "files": [
    "dist/*",
    "ui.d.ts",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "scripts": {
    "rebuild": "bash scripts/rebuild.sh",
    "dev": "vue-cli-service serve dev/serve.ts",
    "serve": "vue-cli-service serve dev/serve.ts",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },
  "dependencies": {
    "autoprefixer": "10.4.14",
    "postcss": "8.4.24",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.22.5",
    "@babel/preset-env": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@rollup/plugin-alias": "5.0.0",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "25.0.2",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-terser": "0.4.3",
    "@slipmatio/tailwind-config": "3.0.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "cross-env": "7.0.3",
    "eslint": "8.43.0",
    "minimist": "1.2.8",
    "rollup": "3.25.1",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-vue": "6.0.0",
    "typescript": "5.1.3",
    "vue": "3.3.4"
  },
  "peerDependencies": {
    "@slipmatio/tailwind-config": "3",
    "vue": "3"
  },
  "engines": {
    "node": ">=16"
  }
}