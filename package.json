{
  "name": "@slipmatio/ui",
  "version": "0.3.0",
  "type": "module",
  "description": "Common UI components for Slipmat.io projects",
  "author": {
    "name": "Ville Säävuori",
    "email": "ville@unessa.net"
  },
  "keywords": [
    "vue",
    "typescript",
    "slipmatio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/slipmatio/ui"
  },
  "bugs": {
    "url": "https://github.com/slipmatio/ui/issues"
  },
  "homepage": "https://slipmat.io",
  "license": "MIT",
  "main": "./dist/ui.cjs",
  "module": "./dist/ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ui.js",
      "require": "./dist/ui.cjs"
    },
    "./ui.css": {
      "import": "./dist/ui.css",
      "require": "./dist/ui.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "DEBUG=0 vite dev",
    "build": "DEBUG=0 vite build",
    "test": "DEBUG=0 vitest",
    "test:e2e": "DEBUG=0 playwright test --ui",
    "ts": "DEBUG=0 vue-tsc --build --force",
    "test:ci-e2e": "DEBUG=0 playwright test",
    "coverage": "DEBUG=0 vitest run --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "4.1.2",
    "@tailwindcss/vite": "4.1.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "3.2.2",
    "@vitest/eslint-plugin": "^1.1.24",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.0",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-playwright": "^2.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vue": "^10.0.0",
    "happy-dom": "^20.0.0",
    "tailwindcss": "4.1.2",
    "typescript": "^5.7.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "3.2.2",
    "vue": "^3.5.13",
    "vue-tsc": "^3.0.0"
  },
  "peerDependencies": {
    "vue": "3"
  },
  "engines": {
    "node": ">=22"
  }
